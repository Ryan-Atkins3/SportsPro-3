@model List<Product>
@{
	ViewData["Title"] = "Manage Products - SportsPro";
	Layout = "_Layout";
}

<div>
	<h1>Product Manager</h1>
	
		<table class="table table-bordered table-striped">
			<thead>
				<tr>
					<th>Code</th>
					<th>Name</th>
					<th>Price</th>
					<th>Release Date</th>
					<th></th>
					<th></th>
				</tr>
			</thead>
			<tbody>
				@foreach(var product in Model)
				{
					<tr>
						<td>@product.ProductCode</td>
						<td>@product.ProductName</td>
						<td>@product.ProductPrice.ToString("C2")</td>
						<td>@product.ProductReleaseDate.ToShortDateString()</td>
						<td><a asp-controller="Product" asp-action="Edit" asp-route-id="@product.ProductId" class="btn btn-outline-primary">Edit</a></td>
						<td><a asp-controller="Product" asp-action="Delete" asp-route-id="@product.ProductId" class="btn btn-outline-danger">Delete</a></td>
					</tr>
				}
			</tbody>
		</table>
		<div class="mt-3">
			<a asp-controller="Product" asp-action="Add" class="btn btn-outline-primary">Add Product</a>
		</div>
	
</div>