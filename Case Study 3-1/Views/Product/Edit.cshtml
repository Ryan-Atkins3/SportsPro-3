@model Product
@{
	string title = ViewBag.Action + " Product";
	ViewData["Title"] = title + " - SportsPro";
	Layout = "_Layout";
}


<div>
	<h1 class="p-2">@ViewBag.Title</h1>
	<div asp-validation-summary="All"></div>
</div>
<div>
	<form asp-action="Edit" method="post">
		<label asp-for="ProductCode" class="form-label">Code</label>
		<input asp-for="ProductCode" class="form-control"/>

		<label asp-for="ProductName" class="form-label">Name</label>
		<input asp-for="ProductName" class="form-control" />

		<label asp-for="ProductPrice" class="form-label">Yearly Price</label>
		<input asp-for="ProductPrice"  class="form-control" />

		<label asp-for="ProductReleaseDate" class="form-label">Release Date</label>
		<input asp-for="ProductReleaseDate" class="form-control" />

		<div class="mt-3">
			<button type="submit" class="btn btn-outline-primary">Save</button>
			<a asp-controller="Product" asp-action="Index" class="btn btn-outline-secondary">Cancel</a>
		</div>
		<input type="hidden" asp-for="ProductId"/>
	</form>
</div>