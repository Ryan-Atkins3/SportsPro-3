@model Customer
@{
    ViewData["Title"] = ViewBag.Action + "Customer";
    Layout = "_Layout";
}

<div>
    <form asp-action="Delete" method="post">
        <h1>@ViewBag.Action Customer</h1>
        <h2 class="text-muted">Are you sure you want to delete @Model.FirstName @Model.LastName?</h2>
        <div class="mt-3">
            <button class="btn btn-outline-danger">@ViewBag.Action</button>
            <a asp-action="Index" class="btn btn-outline-secondary">Cancel</a>
        </div>
        <input type="hidden" asp-for="CustomerId"/>
    </form>

</div>