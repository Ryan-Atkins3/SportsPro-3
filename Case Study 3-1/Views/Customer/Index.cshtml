@model List<Customer>
@{
    ViewData["Title"] = "Customer Manager - SportsPro";
    Layout = "_Layout";
}
<div>
    <h1>Customer Manager</h1>

	<table class="table table-bordered table-striped">
		<thead>
			<tr>
				<th>Name</th>
				<th>Email</th>
				<th>City</th>
				<th></th>
				<th></th>
			</tr>
		</thead>
		<tbody>
			@foreach (var customer in Model)
			{
				<tr>
					<td>@customer.FirstName @customer.LastName</td>
					<td>@customer.Email</td>
					<td>@customer.City</td>
					<td><a asp-action="Edit" asp-route-id="@customer.CustomerId" class="btn btn-outline-primary">Edit</a></td>
					<td><a asp-action="Delete" asp-route-id="@customer.CustomerId" class="btn btn-outline-danger">Delete</a></td>
				</tr>
			}
		</tbody>
	</table>
	<div>
		<a class="btn btn-outline-primary" asp-action="Add">Add New Customer</a>
	</div>
</div>